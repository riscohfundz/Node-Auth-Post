<%- include('../partials/header') %>
<div class="container">
    <div class="row mt-5">
        <div class="col-lg-12 mx-auto">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-cente">
                    <h2 class="fw-bold text-secondary">My Posts</h2>
                    <a class="btn btn-primary" href="/create-post">Create New Post</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Created</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Post Title</td>
                                <td>Post Content</td>
                                <td>Post Image</td>
                                <td>Post Created At</td>
                                <td>
                                    <a class="btn btn-primary" href="/edit-post/:id">Edit</a>
                                    <a class="btn btn-danger" href="/delete-post">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>